<Window x:Class="YouTubeVideoDownload.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTubeVideoDownload"
        mc:Ignorable="d"
        Title="YouTube Video Download" Height="450" Width="800">
    <Grid Background="#FF1C1C1C">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="YouTube Video Downloader" FontSize="30" Foreground="White" Margin="0,0,0,20"/>
            <TextBox x:Name="youtubelinktxt" FontFamily="Arial" FontSize="20" Height="40" Width="400" Margin="0,0,0,10" Background="#FF333333" Foreground="White" BorderBrush="#FF555555" BorderThickness="2"/>
            <Button x:Name="downloadbtn" FontFamily="Arial" FontSize="20" Height="40" Width="200" Content="Download" Click="downloadbtn_Click" Background="#FF28A745" Foreground="White" BorderBrush="#FF218838" BorderThickness="2"/>
            <ProgressBar Name="progressBar" Width="400" Height="30" Margin="0,20,0,0" Background="#FF333333" Foreground="#FF28A745"/>
        </StackPanel>
    </Grid>
</Window>
