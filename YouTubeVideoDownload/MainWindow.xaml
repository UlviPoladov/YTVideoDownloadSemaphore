<Window x:Class="YouTubeVideoDownload.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTubeVideoDownload"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="youtubelinktxt" FontFamily="Arial Black" FontSize="20" Height="47" ></TextBox>
        <Button x:Name="downloadbtn" FontFamily="Arial Black" FontSize="20" Height="47" Content="Download" Click="downloadbtn_Click" ></Button>
        <ProgressBar Name="progressBar" Width="400" Height="30" />
    </StackPanel>
</Window>
